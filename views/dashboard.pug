doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Bot@#{username} | Dashboard
        link(rel="stylesheet", href="./css/h.css")
    body.h-bg-black 
        input#_username(hidden,value = `${username}`)
        div.h-flex-x.h-pail-center-full-1.h-bg-grey-2.h-card 
            div.h-outline-white.h-card-1
                br
                br
                br
                div.h-flex-x.h-flex-center
                    h2.h-margin-0.h-text-bold Hi, 
                    h5.h-margin-0.h-text #{username}
                br
                if africUsername
                    a.h-button.h-bg-blight.h-card-1.h-text-white.h-text-bold(href="/editDetails") Edit AfricGold Details
                else 
                    a.h-button.h-bg-red.h-shadow-red.h-card-1.h-text-white.h-text-bold(href="/editDetails")  !! Edit AfricGold Details
                if botStarted == true
                    div.h-card
                        p.h-center.h-shadow-red.h-bg-red.h-text-white.h-text-bold.h-card.h-circle(onclick = "stopBot()") Stop Bot
                        p.h-outline-lightblue.h-text-white.h-text-bold.h-card-1 Next click : #{`${new Date(nextBotClick).toGMTString()}`}
                else 
                    
                    div.h-card
                        p.h-center.h-shadow-lightgreen.h-text-white.h-text-bold.h-card.h-circle.h-bg-blight(onclick="startBot()") Start Bot
                        p.h-outline-lightblue.h-font-tiny-2.h-text-lightblue.h-text-bold.h-card-1 click : #{`${new Date().toGMTString()}`}
            div.h-card-sm
                span.h-text.h-text-white.h-text-bold.h-text-right Bot Clicks
                div.h-card-1
                    if botClicks.length > 0
                        for click in botClicks 
                            if click.status == "success"
                                p.h-card-1.h-bg-white.h-shadow-yellow-white-3.h-font-tiny.h-text-bold(style="border-left:5px solid green") #{click.msg}
                            else 
                                p.h-card-1.h-bg-white.h-shadow-yellow-white-3.h-font-tiny.h-text-bold(style="border-left:5px solid red") #{click.msg}
                    else 
                        p.h-card-1.h-bg-white.h-shadow-yellow-white-3.h-font-tiny.h-text-bold(style="border-left:5px solid green") No click yet                 .

script(type="text/javascript", src="./js/socket.io.min.js")
script(type="text/javascript", src="./js/dash.js")